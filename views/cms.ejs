<%- include("partials/cmsheader") %>
<div style="margin-top: -150px"></div>



<div class="container-fluid event-finder">

    <div class="container">

        <form action="/addpage" method="post">
            <button type="submit" class="btn btn-outline-danger">Add Event</button>
        </form>



        <div class="row">
            <div class="col text-center">
            <h1 style="color:black"><strong>Upcoming Events</strong></h1>
            </div>
        </div>

        <div class="row events">

            <div class="col-4 text-center">
                <p><strong>Event Date</strong></p>
            </div>
            <div class="col-5 text-center">
                <p><strong>Event Name</strong></p>
            </div>
            <div class="col-3 text-center">
                <p><strong>Actions</strong></p>
            </div>

            <hr>


            <% events.forEach(function(event){ %>
                
                <div class="col-4 text-center">
                    <h3><%= event.date %></h3>
                </div>
                <div class="col-5 text-center">
                    <h3><%= event.name %></h3>
                </div>
                <div class="col-3 text-center">
                    <form action="/delete" method="post">
                        <button class="btn btn-danger" type="submit" name="id" value="<%= event._id %>">Delete Event</button>
                    </form>
                </div>
                
                <hr>
            <% }); %>



        </div>
    </div>

</div>


<%- include("partials/footer") %>

